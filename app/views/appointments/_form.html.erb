<%= form_with(model: @appointment, local: true) do |f| %>
<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :start_date, "Start Date and Time" %>
  <%= f.datetime_local_field :start_date, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :end_date, "End Date and Time" %>
  <%= f.datetime_local_field :end_date, class: 'form-control' %>
</div>

<%= f.submit 'Save Appointment', class: 'btn btn-primary' %>
<% end %>