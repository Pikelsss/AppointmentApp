<!-- app/views/appointments/new.html.erb -->
<div class="mx-auto max-w-3xl px-4 py-8">
  <div class="rounded-lg bg-white p-6 shadow-lg">
    <h2 class="mb-6 text-2xl font-bold">Create New Appointment</h2>
    <%= form_with(model: @appointment, local: true, class: "space-y-6") do |f| %>
    <div>
      <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :title, class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:border-blue-500 focus:outline-none focus:ring-blue-500" %>
    </div>
    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :start_date, class: "block text-sm font-medium text-gray-700" %>
        <%= f.datetime_local_field :start_date, class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:border-blue-500 focus:outline-none focus:ring-blue-500" %>
      </div>
      <div>
        <%= f.label :end_date, class: "block text-sm font-medium text-gray-700" %>
        <%= f.datetime_local_field :end_date, class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:border-blue-500 focus:outline-none focus:ring-blue-500" %>
      </div>
    </div>
    <div>
      <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :description, rows: 4, class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:border-blue-500 focus:outline-none focus:ring-blue-500" %>
    </div>
    <%= f.submit "Create", class: "rounded-md bg-blue-600 px-4 py-2 text-white hover:bg-blue-700" %>
    <% end %>
  </div>
</div>