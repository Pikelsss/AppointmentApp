<div>
  <% if notice.present? %>
  <p id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Tasks" %>

  <div>
    <h1>Tasks</h1>
    <%= link_to "New task", new_task_path %>
  </div>

  <div id="tasks">
    <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
    </p>
    <% end %>
  </div>
</div>